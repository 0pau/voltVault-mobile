<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VoltVault" parent="Base.Theme.VoltVault.Dark">
    </style>

    <style name="Base.Theme.VoltVault.BottomSheet" parent="Base.Theme.VoltVault.BottomSheet.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Base.Theme.VoltVault.BottomSheet.Dark" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="android:navigationBarColor">#111111</item>
        <item name="colorAccent">@color/brand_fg_alt</item>
        <item name="windowBackground">#191919</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
        <item name="disabledText">#A0A0A0</item>
        <item name="textColorPrimary">#FFFFFF</item>
    </style>

    <style name="Base.Theme.VoltVault.Login" parent="Base.Theme.VoltVault">
        <item name="android:statusBarColor">?activeBackground</item>
        <item name="android:navigationBarColor">?windowBackground</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
    </style>
</resources>