<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.VoltVault" parent="Base.Theme.VoltVault.Light">
    </style>

    <style name="Base.Theme.VoltVault.Light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/brand_bg</item>
        <item name="android:navigationBarColor">?activeBackground</item>
        <item name="android:windowBackground">?windowBackground</item>
        <item name="textColorPrimary">#000000</item>
        <item name="colorAccent">@color/brand_fg_alt</item>
        <item name="activeBackground">@color/white</item>
        <item name="disabledText">@color/disabled_text</item>
        <item name="borders">@color/borders</item>
        <item name="accentTransparent">@color/brand_fg_transparent</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">15dp</item>
        <item name="ok">@color/ok_light</item>
        <item name="ok_transparent">@color/ok_light_transparent</item>
        <item name="windowBackground">#F0F0F0</item>
        <item name="brand_secondary">#1C1B1F</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.VoltVault.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/brand_bg</item>
        <item name="android:navigationBarColor">?activeBackground</item>
        <item name="android:windowBackground">?windowBackground</item>
        <item name="textColorPrimary">#FFFFFF</item>
        <item name="colorAccent">@color/brand_fg_alt</item>
        <item name="activeBackground">#202020</item>
        <item name="disabledText">#A0A0A0</item>
        <item name="borders">#353535</item>
        <item name="accentTransparent">@color/brand_fg_transparent</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">15dp</item>
        <item name="ok">@color/ok_light</item>
        <item name="ok_transparent">@color/ok_light_transparent</item>
        <item name="windowBackground">#000000</item>
        <item name="brand_secondary">#FFFFFF</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.VoltVault.Login" parent="Base.Theme.VoltVault">
        <item name="android:statusBarColor">?activeBackground</item>
        <item name="android:navigationBarColor">?windowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Base.Theme.VoltVault.ProductView" parent="Base.Theme.VoltVault">
        <item name="android:statusBarColor">#F0F0F0</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Base.Theme.VoltVault.BottomSheet" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="android:navigationBarColor">#F0F0F0</item>
        <item name="colorAccent">@color/brand_fg_alt</item>
        <item name="windowBackground">#F0F0F0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="Theme.VoltVault" parent="Base.Theme.VoltVault" />
</resources>