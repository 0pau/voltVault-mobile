<?xml version="1.0" encoding="utf-8"?>
<layer-list android:paddingTop="35dp" android:paddingBottom="20dp" xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?windowBackground"/>
            <corners android:topRightRadius="30dp" android:topLeftRadius="30dp"/>
        </shape>
    </item>
    <item android:width="50dp" android:height="4dp" android:gravity="center_horizontal" android:top="15dp">
        <shape android:shape="rectangle">
            <solid android:color="?disabledText"/>
            <corners android:radius="100dp"/>
        </shape>
    </item>
</layer-list>